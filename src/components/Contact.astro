    <section id="contact" class="contact-wrap">
        <h2 class="text-[#faebd7] text-[3vw] ml-5 mb-12 pb-0.5 tracking-wider">Me contacter</h2>
        <p class="text-[#faebd7] text-[20px] w-full text-center">Vous pouvez m'écrire à l'adresse email florent.garcia369@gmail.com ou remplir le formulaire ci dessous</p>
      <form action="https://formspree.io/f/xzzedvnw" method="POST" class="contact-form">
        <div class="">
        <div class="">
          <div class="input-block">
            <label for="nom">Votre Nom</label>
            <input id="nom" name="nom" type="text" class="form-control" required>
          </div>
        </div>
        <div class="">
          <div class="input-block">
            <label for="email">Votre email</label>
            <input id="email" name="email" type="text" class="form-control" required>
          </div>
        </div>
        <div class="">
          <div class="input-block">
            <label for="subject">Le sujet de votre message</label>
            <input id="subject" name="subject" type="text" class="form-control" required>
          </div>
        </div>
        <div class="">
          <div class="input-block textarea">
            <label for="message">Votre message</label>
            <textarea id="message" name="message" rows="3" type="text" class="form-control" required></textarea>
